	const skills = document.querySelector(".skills_fill");

	document.addEventListener("DOMContentLoaded", function() {
    const skillsContainer = document.getElementById("skills-container");
    const firstBar = document.getElementById("first-bar");
    const secondBar = document.getElementById("second_bar");

    // Create an intersection observer
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // Start the animation here
                firstBar.classList.add("animate"); // Add your animation class
                secondBar.classList.add("animate"); // Add your animation class
                observer.disconnect(); // Stop observing after the animation starts
            }
        });
    }, { threshold: 0.1 }); // Trigger when 10% of the section is visible

    observer.observe(skillsContainer);
});

