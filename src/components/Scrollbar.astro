---
const {text} = Astro.props;
---

<div class="overflow-hidden whitespace-nowrap background border-white border-y py-2 md:p-4">
  <div class="inline-block animate-scroll min-w-full">
     <span class="text-white background text-lg md:text-2xl font-extrabold text-start">{text}</span>
    
  </div>
    <div class="inline-block animate-scroll min-w-full ">
     <span class="text-white background text-lg md:text-2xl font-extrabold text-start">{text}</span>
  </div>
</div>




<style>
.animate-scroll {
  animation: scroll 25s linear infinite;
}

.overflow-hidden {
  overflow: hidden;
}

.inline-block {
  display: inline-block;
  white-space: nowrap;
}
</style>