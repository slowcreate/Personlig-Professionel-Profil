---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Titel">
	<article class="pt-12 lg:pt-16">
		<h1 class="lowercase">Creating user interfaces with playful graphics and colors, always focused on functionality.</h1>
		<!-- <Image src="" alt=""></Image> -->
	</article>
</MainLayout>


<!-- <p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p> -->

<script>
	import { inView } from "motion";

	const fadeinstatistik = document.querySelector(".fadeinstatistik");

	inView(fadeinstatistik, () => {
		fadeinstatistik.classList.add("animate__animated", "animate__fadeInLeft", "animate__delay-0.5s");
	});

	const statistik = document.querySelector(".statistik");

	inView(statistik, () => {
		statistik.classList.add("animate__animated", "animate__fadeIn", "animate__delay-0.7s");
	});

	const facts = document.querySelector(".facts");

	inView(facts, () => {
		facts.classList.add("animate__animated", "animate__fadeIn", "animate__delay-0.7s");
	});

	const save = document.querySelector(".save");

	inView(save, () => {
		save.classList.add("animate__animated", "animate__fadeIn", "animate__delay-0.7s");
	});

</script>